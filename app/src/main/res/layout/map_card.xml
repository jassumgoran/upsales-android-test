<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/tools"
    app:background="@android:color/white"
    android:background="@android:color/white"

    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="25dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <upsales.com.upsalesandroidtest.ui.views.TypefacedTextView
            android:id="@+id/txtAddressType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Address type"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:typeface="@string/roboto_black" />

        <upsales.com.upsalesandroidtest.ui.views.TypefacedTextView
            android:id="@+id/txtStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street address"
            android:textColor="@color/colorUpsalesGrey"
            android:textSize="14sp"
            app:typeface="@string/roboto_regular" />

        <upsales.com.upsalesandroidtest.ui.views.TypefacedTextView
            android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 45 City"
            android:textColor="@color/colorUpsalesGrey"
            android:textSize="14sp"
            app:typeface="@string/roboto_regular" />

        <upsales.com.upsalesandroidtest.ui.views.TypefacedTextView
            android:id="@+id/txtCountry"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sweden"
            android:textColor="@color/colorUpsalesGrey"
            android:textSize="14sp"
            app:typeface="@string/roboto_regular" />

        <upsales.com.upsalesandroidtest.ui.views.PagerIndicatorView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
</FrameLayout>